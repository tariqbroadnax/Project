package Editor.tools;

import java.awt.Point;
import java.awt.event.MouseEvent;
import java.awt.geom.Point2D;

import Editor.EditorResources;
import Graphic.Camera;

public class MoveTool implements Tool
{
	private EditorResources resources;
	
	private Point2D.Double start, focus;
	
	public MoveTool(EditorResources resources)
	{
		this.resources = resources;
	}
	
	@Override
	public void mousePressed(MouseEvent e)
	{
		Camera camera = resources.getCamera();

		focus = (Point2D.Double) camera.getFocus()
									   .clone();
		Point p = e.getPoint();
		
		start = camera.normalLocation(p);		
	}
	
	@Override
	public void mouseDragged(MouseEvent e)
	{
		Camera camera = resources.getCamera();
	
		Point p = e.getPoint();
		
		Point2D.Double end = camera.normalLocation(p);
		
		double dx = end.x - start.x,
			   dy = end.y - start.y;
		
		camera.setFocus(focus.x + dx, focus.y + dy);
	}
}

package Movement;

import java.awt.geom.Point2D;

public class TargetForce extends Force
{
	private Point2D.Double src, target;
	
	public double xVel(double t)
	{
		double dir = Math.atan2(target.y - src.y,
								target.x - src.x);
		
		double xVel = super.xVel(t);
		
		double dx = target.x - src.x;
		
		if(dx < xVel)
			return dx;
		else
			return xVel;
	}
}

package Editor.comp;

import java.awt.geom.Point2D;

import javax.swing.JComponent;

import Editor.EditorResources;
import Editor.SceneListener;
import Graphic.Camera;
import Tileset.TileMap;

public class TileMapComp extends JComponent
	implements SceneListener
{
	private EditorResources resources;
	private TileMap tm;
	private Camera camera;
	
	public TileMapComp(
			EditorResources resources,
			TileMap tm, Camera camera)
	{
		this.resources = resources;
		this.tm = tm;
		this.camera = camera;
	}
	
	private void updateLocAndSize()
	{
		Point2D.Double loc = tm.getLoc();
		loc = camera.screenLocation(loc);
		
		setLocation((int)loc.x, (int)loc.y);
	}

	@Override
	public void sceneChanged() 
	{
		
	}
}

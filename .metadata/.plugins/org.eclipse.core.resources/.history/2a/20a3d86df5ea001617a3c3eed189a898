package GUI;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.event.ComponentEvent;

import javax.swing.JPanel;

import Dialogue.Dialogue;
import Editor.ComponentListener;

public class HUD extends JPanel
	implements ComponentListener
{		
	private DialogueArea area;
	
	public HUD()
	{	
		setOpaque(false);
		setLayout(null);
		
		area = new DialogueArea();
		
		add(area, BorderLayout.SOUTH);
		
		area.setDialogue(new Dialogue());
	}
	
	@Override
	public void componentResized(ComponentEvent e)
	{
		Dimension size = getSize(),
				  areaPrefSize = area.getPreferredSize();
		
		area.setSize(areaPrefSize);
		
		area.setLocation((size.width - areaPrefSize.width)/2 + 5,
						 size.height - areaPrefSize.height - 5);
		
	}
}

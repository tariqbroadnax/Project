package GUI;

import java.awt.Point;
import java.awt.event.MouseEvent;
import java.awt.geom.Point2D;

import Actions.ActionBuffer;
import Actions.Move;
import EditorGUI.MouseListener;
import Entity.Entity;
import Graphic.Camera;

public class MouseController implements MouseListener
{
	private Entity player;
	
	private Camera camera;
	
	private Move move;
	
	private ActionBuffer buffer;
	
	public MouseController(
			Entity player, Camera camera,
			ActionBuffer buffer)
	{
		this.player = player;
	
		this.camera = camera;
		
		move = new Move();
	}
	
	private void makePlayerMoveToLoc(Point2D.Double loc)
	{
		if(!move.isFinished())
		{
			
		}
		
		/*
		 * if(player already moving)
		 *  switch target
		 * else
		 *  start moving
		 */
	}
	
	public void mousePressed(MouseEvent e)
	{
		Point loc = e.getPoint();
		
		Point2D.Double normLoc = camera.normalLocation(loc);
	
		// schedule
		makePlayerMoveToLoc(normLoc);	
	}
}

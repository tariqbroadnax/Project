package Editor.selection;
import java.util.ArrayList;
import java.util.List;

public class SelectionHandler 
{
	private List<Object> selected;
	
	private List<SelectionListener> listeners;
	
	public SelectionHandler()
	{
		selected = null;
		
		listeners = new ArrayList<SelectionListener>();
	}
	
	public void setSelected(Object obj)
	{
		selected.clear();
		selected.add(obj);
		
		notifyListeners();
	}
	
	public void setSelection(List<Object> objs)
	{
		selected.clear();
		selected.addAll(objs);
		
		notifyListeners();
	}
	
	public boolean onlySelected(Object obj)
	{
		return selected.size() == 1 &&
			   selected.contains(obj);
	}
	
	public boolean onlySelected(List<Object> objs)
	{
		return selected.containsAll(objs) &&
			   selected.size() == objs.size();
	}
	
	public boolean isSelected(Object obj)
	{
		return selected.contains(obj);
	}
	
	public void addSelectionListener(
			SelectionListener listener)
	{
		listeners.add(listener);
	}
	
	private void notifyListeners()
	{
		for(SelectionListener listener : listeners)
			listener.selectionChanged();
	}
}

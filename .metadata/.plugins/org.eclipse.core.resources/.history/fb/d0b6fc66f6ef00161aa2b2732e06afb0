package Editor;

import java.awt.Dimension;

import javax.swing.JDialog;

import Editor.comp.Dimension2DForm;
import Editor.comp.ValueListener;

public class TileSettingsDialog extends JDialog
	implements ValueListener
{
	private Dimension2DForm dimForm;
	
	private TileSettings settings;
	
	public TileSettingsDialog(TileSettings settings)
	{
		dimForm = new Dimension2DForm();
	
		add(dimForm);		
		
		dimForm.addValueListener(this);
	
		setTileSettings(settings);
		
		setSize(new Dimension(300, 200));
	}
	
	public void setTileSettings(TileSettings settings)
	{
		this.settings = settings;
		
		double width = settings.getTileWidth(),
			   height = settings.getTileHeight();
		
		dimForm.setValue(width, height);
	}

	@Override
	public void valueChanged() 
	{
		double width = dimForm.getWidthValue(),
			   height = dimForm.getHeightValue();
		
		settings.setTileWidth(width);
		settings.setTileHeight(height);
	}
	
}

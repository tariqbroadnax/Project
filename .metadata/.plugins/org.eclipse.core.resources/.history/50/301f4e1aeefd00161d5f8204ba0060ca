package Actions;

import java.awt.geom.Point2D;
import java.time.Duration;

import Entity.Entity;

public class Follow extends Action 
{
	private double maxDistSq;
	
	private Entity target;
	
	private Move move;
	
	public Follow()
	{
		move = new Move();
		maxDistSq = 5;
	}
	
	public void update(Duration delta)
	{
		double distSq = actorTargetDistSq();
		
		if(distSq > maxDistSq)
		{
			if(!move.isActing())
				move.start();
			
			System.out.println(maxDistSq);
			move.setTolerance(maxDistSq);
			move.setTarget(target.getLoc());
			move.update(delta);
		}
		else
		{
			if(move.isActing())
				move.stop();
		}
	}
	
	public void stop()
	{
		super.stop();
		
		if(move.isActing())
			move.stop();
	}
	
	public void setActor(Entity actor)
	{
		super.setActor(actor);
		
		move.setActor(actor);
	}
	
	public void setTarget(Entity target)
	{
		this.target = target;
	}
	
	private double actorTargetDistSq()
	{
		Point2D.Double actorLoc = actor.getLoc(),
					   targetLoc = target.getLoc();
		
		return actorLoc.distanceSq(targetLoc);
	}
}

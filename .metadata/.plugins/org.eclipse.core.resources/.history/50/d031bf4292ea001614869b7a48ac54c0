package GUI;

import java.util.ArrayList;
import java.util.List;

import Dialogue.Dialogue;

public class UIController 
{
	private List<UIResponder> responders;
	
	public UIController()
	{
		responders = new ArrayList<UIResponder>();
	}
	
	public void startDialogue(Dialogue dialogue)
	{
		for(UIResponder responder : responders)
			responder.startDialogue(dialogue);
	}
	
	public void addUIResponder(UIResponder responder) {
		responders.add(responder);
	}
	
	public void removeUIResponder(UIResponder responder) {
		responders.remove(responder);
	}
}

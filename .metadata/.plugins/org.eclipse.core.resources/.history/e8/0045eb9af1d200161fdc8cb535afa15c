package Editor.comp;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;

import javax.swing.JComponent;

import Graphic.GraphicsContext;
import Maths.Circle2D;

public class Guage extends JComponent
{
	public void paintComponent(Graphics g)
	{
		super.paintComponent(g);
		
		GraphicsContext gc = new GraphicsContext(g);
		
		Dimension
		gc.camera.setScreenDimension(size);
		
		
		Graphics2D g2d = (Graphics2D)g.create();
		
		int width = getWidth(),
			height = getHeight();
		
		g2d.scale(1, height * 1.0 / width);
		
		Circle2D.Double circ = new Circle2D.Double(0, 0, width);
				
		g2d.setPaint(Color.black);
		g2d.fill(circ);
		
		
	}
}

package GUI;


import java.awt.Font;

import javax.swing.ActionMap;
import javax.swing.InputMap;
import javax.swing.JComponent;
import javax.swing.JFrame;
import javax.swing.JLayeredPane;
import javax.swing.KeyStroke;
import javax.swing.plaf.FontUIResource;

import Actions.AbilityAction;
import Game.Scene;
import Game.Updater;
import Graphic.Camera;
import Graphic.Painter;
import Utilities.Components;

public class UI
{
	private GFrame frame;
	
	private Painter painter;
	
	private Camera camera;
	
	public UI(Scene scene, Updater updater)
	{		
		frame = new GFrame();
		
		camera = new Camera();
		
		painter = new Painter(frame, camera);
				
		updater.addUpdatable(d -> painter.paint());
		
		
		frame.getRootPane()
			 .setOpaque(false);
	}
	
	public void setGUIVisible(boolean visible)
	{
		frame.setVisible(visible);
	}
	
	public JFrame getFrame()
	{
		return frame;
	}
}
